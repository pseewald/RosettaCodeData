function lookandsay(n::String)
    rst = IOBuffer()
    i, c = 1, 1
    while i â‰¤ length(n)
        if i != length(n) && n[i] == n[i+1]
            c += 1
        else
            print(rst, c, n[i])
            c = 1
        end
        i += 1
    end
    return String(take!(rst))
end

function lookandsayseq(n::Integer)
    rst = Array{String}(n)
    rst[1] = "1"
    for i in 2:n
        rst[i] = lookandsay(rst[i-1])
    end
    return rst
end

