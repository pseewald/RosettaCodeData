function middle3(n::Integer)
    s = dec(abs(n))
    l = length(s)
    if iseven(l)
        throw(ArgumentError("n must have an odd number of digits"))
    elseif l < 3
        throw(ArgumentError("n must have 3 digits or more"))
    end
    mid = (l + 1) รท 2
    return s[mid-1:mid+1]
end

